  <!-- Phần nhập thông tin -->
  <div class="login-section">
    <!-- Logo -->
    <div class="logo">
       <img src="imgContent/logo.png" alt="Logo">
    </div>

    <!-- Welcome back -->
    <h1>Welcome back!</h1>

    <form action="/login" method="POST">
    <!-- User Name -->
    <div class="input-group">
        <div class="input-group username">
            <input type="text" name="username" placeholder="User name" required />
        </div>
        
        <div class="input-group password-wrapper">
            <input type="password" name="password" placeholder="Password" required>
        </div>
        
    </div>

    <!-- Forgot password -->
    <h3>Forgot password?</h3>

    <!-- Login Button -->
    <button id="login-btn" type="submit">Login</button>
  </form>

    <!-- Separator -->
    <div class="separator-line">
        <div class="line"></div>
        <span>Or continue with</span>
        <div class="line"></div>
    </div>

    <!-- Google and Facebook Buttons -->
    <div class="social-buttons">
        <button><i class="fab fa-google"></i> Google </button>
        <button><i class="fa-brands fa-facebook-f"></i> Facebook </button>
    </div>

    <h2>Not a member? <span class="register-link"><a href="signup" style="text-decoration: none; color: var(--main-color)">Register now!</a></span></h2>
</div>

    <!-- Ảnh dưới h2 -->
<div class="image-section">
    <img src="imgContent/mask.png" alt="Mask LogoLogo">
</div>









  
