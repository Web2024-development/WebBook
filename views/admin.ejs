                    <!-- </div>
                </div> -->
            
                <!-- Status -->
                <div class="input-group">
                    <label for="status">Status</label>
                    <select id="status" name="status" class="input-field">
                            <option value="Completed">Completed</option>
                            <option value="In progress">In progress</option>
                    </select>
                </div>
                <!-- Category -->
                <div class="input-group">
                    <label for="type">Category</label>
                    <textarea name="type" id="category" class="input-field"></textarea>
                </div>

            


                <!-- Book Overview Input -->
                <div class="input-group">
                    <label for="book-overview">Book Overview</label>
                    <textarea id="book-overview" name="description" class="input-field" placeholder="Add overview"></textarea>
                </div>

                <!-- Buttons: Cancel, Next, Save Temp -->
                <div class="button-group">
                    <!-- <button class="btn cancel-btn">Cancel</button>
