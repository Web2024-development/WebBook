      <div class="container">
        
        <div class="right-section">

        
        
            <form action="/admin/create" method="POST" enctype="multipart/form-data" class="content-container">


            <div class="input-section">
                <!-- Title Input -->
                <div class="input-group">
                    <label for="name">Name</label>
                    <input type="text" id="title" name="name" class="input-field" placeholder="Enter title">
                </div>

                <div class="input-group">
                    <label for="image">Image</label>
                    <input type="file" class="input-field" id="title" name="image" placeholder="Enter image"accept="image/*"  onchange="previewImage(event)">                
                </div>

                <div class="input-group">
                  <label for="file">File</label>
                  <input type="file" id="title" name="file" class="input-field" placeholder="Enter title">
              </div>
            
                <!-- Author Input -->
                <!-- <div class="input-group">
